#!/usr/bin/env bash

currentDir="$(realpath "$(dirname "$(dirname "${BASH_SOURCE[0]}")")")"
initFile="${currentDir}/init.vim"
VIMINIT="$(printf 'source %s' "$initFile")"
export VIMINIT

command -p vim \
    -u "$initFile" \
    -i "${currentDir}/.config/vim/viminfo" \
    --cmd "set nocp runtimepath=${currentDir},/usr/share/vim/vim82/" \
    "$@"
