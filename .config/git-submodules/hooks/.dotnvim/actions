#!/usr/bin/env bash

runInstallHooks() {
    make git-submodules-hooks-install
}

syncSubmodules() {
    make git-submodules-sync
    make arctgx-luarc
    make luarc
}

submodulePattern() {
    declare -a sub
    declare IFS submodRelpathCmd
    submodRelpathCmd="$(printf 'realpath --relative-to="%s" "$PWD"' "$(git top)")"
    mapfile -t sub < <(git submodule --quiet foreach "$submodRelpathCmd" | sed 's/\./\\./g')
    IFS='|'
    echo "${sub[*]}"
}

gitSubmoduleUpdate() {
    git su
}

declare -A patternToAction

patternToAction['^.config/git-submodules/.config$']='runInstallHooks'
patternToAction['^.gitmodules$']='syncSubmodules'
patternToAction["$(submodulePattern)"]='gitSubmoduleUpdate'
